%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.label "email or username"
    %br/
    = f.email_field :login, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "Enter email or username"
  .form-group
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "Password"
  - if devise_mapping.rememberable?
    .form-group
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit "Log in"
= render "devise/shared/links"
